{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": 1,
        "no-unused-vars": "warn",
        "object-curly-spacing": "off",
        "operator-linebreak": "off",
        "quote-props": [
            1,
            "as-needed"
        ],
        "quotes": "warn"
    }
}
