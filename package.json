{
    "author": "Cobalt",
    "browserslist": [
        "defaults",
        "last 2 versions",
        "not dead",
        "> 0.2%"
    ],
    "dependencies": {
        "@popperjs/core": "^2.9.2",
        "bootstrap": "^5",
        "bootstrap-icons": "^1.5",
        "katex": "^0.13.11"
    },
    "description": "Assets for coderdojo.cobalt.rocks",
    "devDependencies": {
        "@minify-html/js": "^0.4.11",
        "@types/bootstrap": "^5.0",
        "@typescript-eslint/eslint-plugin": "^4.26.1",
        "@typescript-eslint/parser": "^4.26.1",
        "autoprefixer": "^10.2.6",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.6",
        "cssnano-preset-advanced": "^5.1.3",
        "eslint": "^7.28.0",
        "eslint-config-google": "^0.14.0",
        "license-checker": "^25.0.1",
        "postcss": "^8.3.4",
        "postcss-cli": "^8.3.1",
        "postcss-font-magician": "^3.0.0",
        "postcss-pxtorem": "^6.0.0",
        "postcss-viewport-height-correction": "^1.1.1",
        "purgecss": "^4.0.3",
        "stylelint": "^13.13",
        "stylelint-config-standard": "^22.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.16",
        "webpack-cli": "^4.4",
        "webpack-merge": "^5.4.0"
    },
    "license": "GPL-3.0-only",
    "name": "coderdojo-homepage-assets",
    "private": "true",
    "repository": {
        "type": "git",
        "url": "ssh://git@gitlab.cobalt.rocks:3724/coderdojo/codedojo-website.git"
    },
    "scripts": {
        "ci-build": "yarn production-compile && yarn generate-licenses && yarn copy-katex && zola build && yarn minify && yarn purge && yarn postcss && yarn unique-css",
        "clean": "rm -rf public node_modules static/katex",
        "compile": "webpack --config webpack.config.js && tsc ts/compress.ts",
        "copy-katex": "cp -r node_modules/katex/dist/ static/katex",
        "generate-licenses": "yarn license-checker --direct --csv --production --out static/licenses.csv  --excludePrivatePackages --customPath license-format.json",
        "lint": "stylelint sass/*.scss && eslint ts/*.ts",
        "minify": "node ts/compress.js",
        "postcss": "postcss -r public/main.css",
        "unique": "export DATE=$(date +%s) && mv public/main.css public/main-$DATE.css && find public -name '*.html' -exec sed -i \"s/main\\.css/main-$DATE.css/\" {} +",
        "unique-css": "export DATE=$(date +%s) && mv public/main.css public/main-$DATE.css && find public -name '*.html' -exec sed -i \"s/main\\.css/main-$DATE.css/\" {} +",
        "production-compile": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js && tsc ts/compress.ts",
        "purge": "purgecss --font-face --keyframes --config purgecss.config.js --output public/main.css"
    },
    "version": "0.0.1b0"
}
