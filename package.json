{
    "name": "coderdojo-homepage-assets",
    "version": "0.0.1b1",
    "private": "true",
    "description": "Assets for coderdojo.red and coderdojo.blue",
    "repository": {
        "type": "git",
        "url": "ssh://git@gitlab.cobalt.rocks:3724/coderdojo/coderdojo-website.git"
    },
    "license": "GPL-3.0-only",
    "author": "Cobalt",
    "scripts": {
        "ci:build": "yarn pre:global && zola build && yarn minify:global && yarn prod:postcss",
        "ci:domain": "sed -i \"s/\\\"start_url\\\":\\s\\\".*\\\"/\\\"start_url\\\": \\\"https:\\/\\/$DOMAIN\\\"/\" static/images/logo/site.webmanifest && echo \"Formatted for domain $DOMAIN\"",
        "dev:docker:up": "docker-compose up",
        "dev:clean": "rm -rf public yarn-error.log static/katex node_modules static/js/* ts/compress.js ts/tsconfig* licenses.*",
        "dev:compile": "webpack --config configs/webpack.config.js",
        "dev:format-sub": "prettier package.json README.md .gitlab-ci.yml ts/ configs/ content/ sass/ --config configs/prettier.toml",
        "dev:lint": "yarn dev:format-sub -c",
        "dev:format": "yarn dev:format-sub -w",
        "minify:global": "yarn minify:html && yarn minify:svg && yarn run minify:png && yarn run minify:jpeg",
        "minify:html": "node ts/compress.js",
        "minify:jpeg": "find public/ -regex '.*/.*\\.jp[eg]?' -exec sh -c 'cp \"$0\" \"$0.tmp\" && jpegtran -optimize -progressive -copy none \"$0.tmp\" > $0 && rm \"$0.tmp\"' {} \\;",
        "minify:png": "pngquant --force --skip-if-larger --speed 1 --strip --quality 60-90 public/images/**/*.png",
        "minify:svg": "svgo public/**/*.svg",
        "pre:global": "yarn pre:generate-licenses && yarn pre:katex && yarn pre:compile-compress && yarn prod:compile",
        "pre:generate-licenses": "yarn license-checker --direct --json --production --out licenses.json --excludePrivatePackages --customPath configs/license-format.json",
        "pre:katex": "cp -r node_modules/katex/dist/ static/katex",
        "pre:compile-compress": "tsc --build configs/tsconfig.compress.json",
        "prod:compile": "cross-env NODE_ENV=production webpack --config configs/webpack.prod.config.js",
        "dev:disable-hashing": "sed -E -i \"s/hashing = (true|false)/hashing = false/\" config.toml",
        "dev:enable-hashing": "sed -E -i \"s/hashing = (true|false)/hashing = true/\" config.toml",
        "prod:postcss": "postcss --config configs/postcss.config.js -r public/main.css"
    },
    "browserslist": [
        "defaults",
        "last 2 versions",
        "not dead",
        "> 0.2%"
    ],
    "dependencies": {
        "@fontsource/source-sans-pro": "^4.5.1",
        "@popperjs/core": "^2.11.0",
        "base64-js": "^1.5.1",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.7.2",
        "katex": "^0.15.1",
        "nord": "^0.2.1",
        "shikwasa": "^2.1.2"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "@minify-html/js": "^0.8.0",
        "@types/bootstrap": "^5.1.6",
        "@types/cssnano": "^4.0.1",
        "@types/katex": "^0.11.1",
        "@types/license-checker": "^25.0.3",
        "@types/node": "^17.0.0",
        "autoprefixer": "^10.4.0",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.13",
        "cssnano-preset-advanced": "^5.1.9",
        "jpegtran-bin": "^6.0.1",
        "license-checker": "^25.0.1",
        "pngquant-bin": "^7.0.2",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "postcss-font-magician": "^3.0.0",
        "postcss-pxtorem": "^6.0.0",
        "postcss-svgo": "^5.0.3",
        "postcss-viewport-height-correction": "^1.1.1",
        "prettier": "^2.5.1",
        "purgecss": "^4.1.3",
        "sass": "^1.45.0",
        "svgo": "^2.8.0",
        "terser-webpack-plugin": "^5.3.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.4",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1",
        "webpack-merge": "^5.8.0"
    }
}
