{
    "name": "coderdojo-homepage-assets",
    "version": "0.0.1b1",
    "private": "true",
    "description": "Assets for coderdojo.red and coderdojo.blue",
    "repository": {
        "type": "git",
        "url": "ssh://git@gitlab.cobalt.rocks:3724/coderdojo/coderdojo-website.git"
    },
    "license": "GPL-3.0-only",
    "author": "Cobalt",
    "scripts": {
        "ci:build": "yarn prod:compile && yarn pre:generate-licenses && yarn pre:katex && zola build -u $DOMAIN && yarn minify:global && yarn prod:postcss && yarn unique:global",
        "ci:domain": "sed -i \"s/\\\"start_url\\\":\\s\\\".*\\\"/\\\"start_url\\\": \\\"https:\\/\\/$DOMAIN\\\"/\" static/images/logo/site.webmanifest && echo \"Formatted for domain $DOMAIN\"",
        "clean": "rm -rf public node_modules static/js/* static/licenses.csv",
        "lint:global": "yarn lint:scss && yarn lint:ts",
        "lint:scss": "stylelint sass/*.scss",
        "lint:ts": "eslint ts/*.ts",
        "minify:global": "yarn minify:html && yarn minify:svg && yarn run minify:png && yarn run minify:jpeg",
        "minify:html": "node ts/compress.js",
        "minify:jpeg": "find public/ -regex '.*/.*\\.jp[eg]?' -exec sh -c 'cp \"$0\" \"$0.tmp\" && jpegtran -optimize -progressive -copy none \"$0.tmp\" > $0 && rm \"$0.tmp\"' {} \\;",
        "minify:png": "pngquant --force --skip-if-larger --speed 1 --strip --quality 60-90 public/images/**/*.png",
        "minify:svg": "svgo public/**/*.svg",
        "pre:compile": "webpack --config webpack.config.js && tsc --outFile ts/compress.js ts/compress.ts",
        "pre:generate-licenses": "yarn license-checker --direct --csv --production --out static/licenses.csv  --excludePrivatePackages --customPath license-format.json",
        "pre:katex": "cp -r node_modules/katex/dist/ static/katex",
        "prod:compile": "cross-env NODE_ENV=production webpack --config webpack.prod.config.js && tsc --outFile ts/compress.js ts/compress.ts",
        "prod:postcss": "postcss -r public/main.css",
        "unique:global": "yarn unique:css && yarn unique:js",
        "unique:css": "export DATE=$(date +%s) && mv public/main.css public/main-$DATE.css && find public -name '*.html' -exec sed -i \"s/main\\.css/main-$DATE.css/\" {} + && find public -name '*.html' -exec sed -i \"s/integrity=sha256-.* rel=stylesheet/integrity=\\\"sha256-$(shasum -b -a 256 public/main-* | awk '{ print $1 }' | xxd -r -p | base64 | sed 's/\\//\\\\\\//g')\\\" rel=stylesheet/\" {} +",
        "unique:js": "export DATE=$(date +%s) && mv public/js/main.js public/js/main-$DATE.js && find public -name '*.html' -exec sed -i \"s/js\\/main\\.js/js\\/main-$DATE.js/\" {} + && find public -name '*.html' -exec sed -Ei \"s/ integrity=sha256-.{44}><\\/script>/ integrity=\\\"sha256-$(shasum -b -a 256 public/js/main-* | awk '{ print $1 }' | xxd -r -p | base64 | sed 's/\\//\\\\\\//g')\\\"><\\/script>/\" {} +"
    },
    "browserslist": [
        "defaults",
        "last 2 versions",
        "not dead",
        "> 0.2%"
    ],
    "dependencies": {
        "@popperjs/core": "^2.9.3",
        "bootstrap": "^5.0.2",
        "bootstrap-icons": "^1.5",
        "katex": "^0.13.13",
        "nord": "^0.2.1"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@minify-html/js": "^0.4.11",
        "@types/bootstrap": "^5.0.17",
        "@types/cssnano": "^4.0.1",
        "@types/eslint": "^7.28",
        "@types/katex": "^0.11.1",
        "@types/license-checker": "^25.0.3",
        "@types/stylelint": "^13.13.1",
        "@typescript-eslint/eslint-plugin": "^4.29",
        "@typescript-eslint/parser": "^4.29",
        "autoprefixer": "^10.3.1",
        "cross-env": "^7.0.3",
        "cssnano": "^5.0.7",
        "cssnano-preset-advanced": "^5.1.3",
        "eslint": "^7.32",
        "eslint-config-google": "^0.14.0",
        "jpegtran-bin": "^5.0.2",
        "license-checker": "^25.0.1",
        "pngquant-bin": "^6.0.0",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "postcss-font-magician": "^3.0.0",
        "postcss-purgefonts": "^1.0.2",
        "postcss-pxtorem": "^6.0.0",
        "postcss-svgo": "^5.0.2",
        "postcss-viewport-height-correction": "^1.1.1",
        "purgecss": "^4.0.3",
        "stylelint": "^13.13.1",
        "stylelint-config-twbs-bootstrap": "^2.2.3",
        "stylelint-scss": "^3.20.1",
        "svgo": "^2.3.1",
        "terser-webpack-plugin": "^5.1.4",
        "ts-loader": "^9.2.4",
        "typescript": "^4.3.5",
        "webpack": "^5.48",
        "webpack-cli": "^4.7.2",
        "webpack-merge": "^5.8.0"
    }
}
