{
    "name": "coderdojo-website",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "ci:build": "yarn pre:global && yarn dev:build && yarn post:global",
        "ci:lint": "yarn dev:format-sub -c",
        "compress:global": "yarn compress:html && yarn compress:svg && yarn run compress:png && yarn run compress:jpeg",
        "compress:html": "node helper/compress.js",
        "compress:jpeg": "find public/ -regex '.*/.*\\.jp[eg]?$' -print -exec sh -c 'cp \"$0\" \"$0.tmp\" && jpegtran -optimize -progressive -copy none \"$0.tmp\" > $0 && rm \"$0.tmp\"' {} \\;",
        "compress:png": "find public/ -regex '.*\\.png$' -print -exec sh -c 'pngquant --force --skip-if-larger --speed 1 --strip --quality 60-90 \"$0\"' {} \\;",
        "compress:svg": "svgo public/**/*.svg",
        "dev:build": "hexo generate",
        "dev:clean": "hexo clean && rm licenses.json",
        "dev:format-sub": "prettier package.json README.md .gitlab-ci.yml 'themes/**/*.(html|js|yml|css)' scaffolds/ content/ *.yml *.js --config .prettierrc.toml",
        "dev:format": "yarn dev:format-sub -w",
        "dev:postcss": "yarn pre:postcss --watch -m",
        "dev:serve": "hexo server",
        "post:global": "yarn compress:global && yarn post:postcss",
        "post:postcss": "postcss 'themes/v2/source/_css/index.css' --output 'public/css/index.css'",
        "pre:generate-licenses": "yarn license-checker --direct --json --production --out licenses.json --excludePrivatePackages --customPath license-format.json",
        "pre:global": "yarn pre:postcss && yarn pre:rollup && yarn pre:generate-licenses",
        "pre:postcss": "postcss 'themes/v2/source/_css/index.css' --output 'themes/v2/source/css/index.css'",
        "pre:rollup": "rollup -c",
        "pre:strawman-css": "echo '' > themes/v2/source/css/index.css"
    },
    "hexo": {
        "version": "6.0.0"
    },
    "browserslist": [
        "defaults",
        "last 2 versions",
        "not dead",
        "> 0.2%"
    ],
    "dependencies": {
        "@fontsource/fira-sans": "^4.5.0",
        "@fontsource/jetbrains-mono": "^4.5.0",
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "a11y-syntax-highlighting": "^0.2.0",
        "autoprefixer": "^10.4.1",
        "base64-js": "^1.5.1",
        "bootstrap-icons": "^1.7.2",
        "hexo-renderer-markdown-it": "^5.0.0",
        "katex": "^0.15.1",
        "shikwasa": "^2.1.2",
        "tailwindcss": "^3.0.8"
    },
    "devDependencies": {
        "@minify-html/js": "^0.8.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.1",
        "cssnano": "^5.0.14",
        "cssnano-preset-advanced": "^5.1.9",
        "hexo": "^6.0.0",
        "hexo-browsersync": "^0.3.0",
        "hexo-generator-archive": "^1.0.0",
        "hexo-generator-category": "^1.0.0",
        "hexo-generator-index": "^2.0.0",
        "hexo-generator-tag": "^1.0.0",
        "hexo-renderer-ejs": "^2.0.0",
        "hexo-server": "^2.0.0",
        "jpegtran-bin": "^6.0.1",
        "license-checker": "^25.0.1",
        "pngquant-bin": "^7.0.2",
        "postcss": "^8.4.5",
        "postcss-cli": "^9.1.0",
        "postcss-font-magician": "^3.0.0",
        "postcss-import": "^14.0.2",
        "postcss-pxtorem": "^6.0.0",
        "postcss-svgo": "^5.0.3",
        "postcss-viewport-height-correction": "^1.1.1",
        "prettier": "^2.5.1",
        "rollup": "^2.62.0",
        "rollup-plugin-terser": "^7.0.2",
        "svgo": "^2.8.0",
        "yaml": "^1.10.2"
    }
}
