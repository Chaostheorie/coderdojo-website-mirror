---
export interface Props {
  href: string;
  color?: "theme" | "theme-neutral" | "secondary";
  size?: "small" | "small-icon" | "medium";
  opacity?: number;
  hoverable?: boolean;
  onclick?: () => {};
}

const {
  href,
  color = "theme",
  size = "medium",
  opacity = 1.0,
  hoverable = false,
  onclick = null,
} = Astro.props;
---

<a
  href={href}
  class={`button button-${color} button-${size} not-prose ${
    hoverable ? "button-hoverable" : ""
  }`}
  onclick={onclick}
  style={`--tw-bg-opacity: ${opacity};`}
>
  <slot />
</a>
